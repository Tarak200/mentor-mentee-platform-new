# Database Configuration
DATABASE_PATH=./database/platform.db

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret for express-session
SESSION_SECRET=your-super-secret-session-key-here

# Google OAuth & Calendar API Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URL=http://localhost:3000/auth/google/callback

# Google Meet Integration (set to true to enable)
GOOGLE_MEET_ENABLED=true

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# SMS Notifications (set to true to enable)
SMS_NOTIFICATIONS_ENABLED=false

# Platform Configuration
PLATFORM_UPI_ID=mentorplatform@paytm
PLATFORM_COMMISSION_PERCENTAGE=10

# Server Configuration
PORT=3000

# Production/Development Mode
NODE_ENV=development

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Payment Gateway Configuration (optional for future integration)
PAYMENT_GATEWAY_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_DIR=public/uploads

# Security Configuration
BCRYPT_ROUNDS=10
TOKEN_EXPIRY=24h

# Support Contact Information
SUPPORT_EMAIL=mentorsupport@platform.com
SUPPORT_PHONE=+91-1800-123-4567
LIVE_CHAT_URL=https://your-chat-service.com

# Platform Settings
PLATFORM_NAME=MentorMate
PLATFORM_TAGLINE=Connect, Learn, and Grow Together
